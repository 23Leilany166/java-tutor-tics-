digraph ecuacion_cuadratica {
    rankdir=TB;
    bgcolor="transparent";
    splines=ortho;
    nodesep=0.6;
    ranksep=0.8;

    // Estilos generales
    node [fontname="Arial", fontsize=14, style="filled",
          fillcolor="white", width=3, height=0.8];

    // Nodos principales
    inicio   [shape=oval, label="INICIO"];

    lectura  [shape=parallelogram, label="A, B, C"];

    dis_calc [shape=box, width=6, label="DIS <-- B**2 - 4*A*C"];

    decision [shape=diamond, width=3, height=1.2, label="DIS >= 0"];

    raices   [shape=box, width=7,
              label="X1 <-- ((-B) + DIS**0.5)/2*A\nX2 <-- ((-B) - DIS**0.5)/2*A"];

    salida   [
        shape=egg,
        label="\"Raíces reales:\"\nX1, X2",
        style="rounded,filled",
        height=1,
        width=4
    ];

    fin      [shape=oval, label="FIN"];

    // -------------------------
    // FLUJO ORIGINAL (NO SE MODIFICÓ NADA)
    // -------------------------
    inicio   -> lectura;
    lectura  -> dis_calc;
    dis_calc -> decision;

    // Etiquetas SI y NO visibles en negro y simulando recuadro
    decision -> raices [
        label="[Si]",
        fontsize=12,
        fontcolor="black",
        labeldistance=1.5,
        labelangle=-90
    ];

    decision -> fin [
        label="[No]",
        fontsize=12,
        fontcolor="black",
        labeldistance=1.5,
        labelangle=0
    ];

    raices -> salida;
    salida -> fin;
}